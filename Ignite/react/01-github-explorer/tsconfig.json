{
  "compilerOptions": { 
    "target": "es2016",                                 
    "lib": ["dom","dom.Iterable", "esnext"],                                        
    "jsx": "preserve",                               
    "module": "commonjs",                                
    "moduleResolution": "node",                       
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,                            
    "noEmit": true,                                   
    "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
