{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never",
            }
        ]
    },
    "settings": {
        "import/resolver":{
            "typescript": {}
        }
    }
}
